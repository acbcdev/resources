---
import '@/styles/globals.css';
import { ClientRouter } from 'astro:transitions';
import SEO from '@/features/seo/SEO.astro';
import Sidebar from '@/features/common/sidebar/Sidebar.astro';
import Header from '@/features/common/header/Header.astro';

interface Props {
	title: string;
	description?: string;
	image?: string;
	subTitle?: string;
	accompanimentTitle?: string;
}

const { title, description, image, subTitle, accompanimentTitle } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<ClientRouter />
		<SEO title={title} description={description ?? 'Resources for web developers'} image={image} />
		<slot name="head" />
	</head>
	<body class="min-h-screen lg:grid lg:grid-cols-[250px_1fr] lg:grid-rows-[auto_1fr]">
		<Sidebar />
		<Header />
		<main class="main-content lg:col-start-2 lg:row-start-2">
			<slot />
		</main>
	</body>
</html>
<style is:global>
	:root {
		overflow-x: hidden;
		color-scheme: dark;
	}
	.container {
		/* background-image: linear-gradient(#051327, #000); */
		/* inset: 0; */
		z-index: -1;
		position: fixed;
	}

	.space {
		--size: 2px;
		--space-layer: ;
		width: var(--size);
		height: var(--size);
		background: white;
		box-shadow: var(--space-layer);
		position: absolute;
		top: 0;
		left: 0;
		opacity: 0.75;
	}
	.gr:is(:hover) .space {
		animation: mover 1s linear infinite;
	}
	.space {
		animation: move var(--duration) linear infinite;
	}

	@keyframes move {
		from {
			transform: translateY(0);
		}
		to {
			transform: translateY(-100vh);
		}
	}
	html {
		font-family: system-ui, sans-serif;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	* {
		margin: 0;
	}

	body {
		line-height: 1.5;
		-webkit-font-smoothing: antialiased;
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			'Segoe UI',
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			'Open Sans',
			'Helvetica Neue',
			sans-serif;
	}

	img,
	picture,
	video,
	canvas,
	svg {
		display: block;
		/* max-width: 100%; */
	}

	input,
	button,
	textarea,
	select {
		font: inherit;
	}

	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		overflow-wrap: break-word;
	}

	#root,
	#__next {
		isolation: isolate;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	/* Sidebar positioning */
	[data-sidebar] {
		grid-column: 1 / 2;
		grid-row: 1 / 3;
	}

	.header {
		grid-column: 2 / 3;
		grid-row: 1 / 2;
	}

	.main-content {
		padding: 2rem 1rem;
		overflow-y: auto;
	}

	/* Mobile responsive */
	@media (max-width: 1023px) {
		body {
			display: grid;
			grid-template-columns: 1fr;
			grid-template-rows: auto 1fr;
		}

		.main-content {
			padding: 1.5rem 1rem;
		}

		.hamburger-button {
			position: fixed;
			top: 1rem;
			left: 1rem;
			z-index: 101;
		}
	}
</style>
