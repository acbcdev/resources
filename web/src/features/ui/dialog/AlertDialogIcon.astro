---
import type { HTMLAttributes } from "astro/types";
import { tv, type VariantProps } from "tailwind-variants";

interface Props extends HTMLAttributes<"div">, VariantProps<typeof alertDialogIcon> {}

export const alertDialogIcon = tv({
	base: "flex items-center justify-center size-10 rounded-full mb-4",
	variants: {
		variant: {
			default: "bg-muted text-muted-foreground",
			destructive: "bg-destructive/10 text-destructive",
			success: "bg-success/10 text-success",
			warning: "bg-warning/10 text-warning",
			info: "bg-info/10 text-info",
		},
	},
	defaultVariants: {
		variant: "default",
	},
});

const { variant, class: className, ...rest } = Astro.props;
---

<div class={alertDialogIcon({ variant, class: className })} data-slot="alert-dialog-icon" {...rest}>
	<slot />
</div>
