---
import type { Tool } from '@/types/data';
import CardItem from './CardItem.astro';

interface Props {
	resources: Tool[];
	class?: string;
}

const { resources, class: className } = Astro.props;
---

<section class:list={['scroll-fadeIn grid grid-cols-2 md:grid-cols-3 mx-10 gap-4', className]}>
	{
		resources.map((item) => (
			<CardItem
				name={item.name}
				description={item.description}
				link={item.url}
				image={item.image ?? ''}
				ogImage={item.og?.image ?? ''}
				ogDescription={item.og?.description ?? ''}
				tags={item.tags}
			/>
		))
	}
</section>
