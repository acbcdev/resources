---
/**
 * Header component
 * Sticky header with search input and GitHub link
 * Uses React SearchInput component for interactive search
 */

import SearchInput from '@/features/search/SearchInput';
import GithubSVG from '@/features/common/svg/GithubSVG.astro';
---

<header class="header lg:col-start-2 lg:row-start-1">
	<div class="header-content">
		<SearchInput client:load />

		<a
			href="https://github.com"
			target="_blank"
			rel="noopener noreferrer"
			aria-label="GitHub"
			class="github-link"
		>
			<GithubSVG />
		</a>
	</div>
</header>

<style>
	.header {
		position: sticky;
		top: 0;
		z-index: 40;
		background: var(--background);
		border-bottom: 1px solid var(--border);
		backdrop-filter: blur(10px);
		padding: 1rem 1.5rem;
	}

	.header-content {
		max-width: 100%;
		display: flex;
		align-items: center;
		justify-content: space-between;

		gap: 1rem;
	}

	.search-container {
		flex: 1;
		display: flex;
		align-items: center;
		background: var(--muted);
		border: 1px solid var(--border);
		border-radius: 0.5rem;
		padding: 0.5rem 1rem;
		transition: all 0.3s ease;
		max-width: 500px;
	}

	.search-container:hover,
	.search-container:focus-within {
		border-color: var(--outline);
		box-shadow: 0 0 0 1px var(--outline);
	}

	.search-icon {
		color: var(--muted-foreground);
		flex-shrink: 0;
		margin-right: 0.5rem;
	}

	.search-input {
		flex: 1;
		background: none;
		border: none;
		color: var(--foreground);
		font-size: 0.95rem;
		outline: none;
	}

	.search-input::placeholder {
		color: var(--muted-foreground);
	}

	.github-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		padding: 0.5rem;
		background: var(--muted);
		border: 1px solid var(--border);
		border-radius: 0.5rem;
		color: var(--muted-foreground);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.github-link:hover {
		background: var(--accent);
		border-color: var(--border);
		color: var(--foreground);
	}

	/* Mobile responsive */
	@media (max-width: 1023px) {
		.header-content {
			margin-left: 0;
		}

		.search-container {
			max-width: calc(100vw - 150px);
		}
	}

	@media (max-width: 640px) {
		.header {
			padding: 0.75rem 1rem;
		}

		.search-container {
			max-width: calc(100vw - 100px);
		}

		.search-input {
			font-size: 0.85rem;
		}

		.github-link {
			width: 36px;
			height: 36px;
		}
	}
</style>
