---
import type { HTMLAttributes } from "astro/types";
import { tv, type VariantProps } from "tailwind-variants";

type Props = HTMLAttributes<"div"> & VariantProps<typeof card>;

export const card = tv({
	base: [
		"bg-card text-card-foreground rounded-xl border border-border/50",
		"starwind-transition-colors",
	],
	variants: {
		variant: {
			default: "",
			interactive:
				"cursor-pointer hover:border-border hover:shadow-lg hover:shadow-black/5 active:scale-[0.99]",
			selected: "border-primary ring-1 ring-primary",
		},
		padding: {
			none: "",
			sm: "p-4",
			md: "p-6",
			lg: "p-8",
		},
	},
	defaultVariants: { variant: "default", padding: "none" },
});

const { variant, padding, class: className, ...rest } = Astro.props;
---

<div class={card({ variant, padding, class: className })} data-slot="card" {...rest}>
	<slot />
</div>
